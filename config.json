{
    "source": "../datasets/metaverse_transactions_dataset.csv",
    "date_column": "timestamp",
    "output": "metaverse_transactions_dataset",
    "filter": "amount > 0",
    "transformations": {
        "target_column": "(anomaly = 'high_risk')::int"
    },
    "outliers": {
        "criterion": "IQR",
        "multiplier": 1.5,
        "threshold": 3.0
    },
    "markdown": {
        "name": "README.md",
        "css_style": "../style.css",
        "float_precision": 4
    },
    "plotly": {
        "plot": {
            "mode": "lines+markers",
            "line": {
                "color": "dodgerblue",
                "dash": "dash",
                "width": 0.8
            },
            "marker": {
                "size": 6,
                "symbol": "circle",
                "color": "white",
                "line": {
                    "color": "dodgerblue",
                    "width": 0.5
                }
            }
        },
        "outliers": {
            "style": {
                "type": "rect",
                "xref": "x",
                "yref": "y",
                "fillcolor": "grey",
                "opacity": 0.05,
                "line": {
                    "width": 1.0,
                    "dash": "dot",
                    "color": "black"
                }
            }
        },
        "layout": {
            "margin": { "l": 20, "r": 20, "t": 30, "b": 20 },
            "showlegend": false,
            "height": 384
        },
        "grid": {
            "automargin": true,
            "gridcolor": "rgba(128,128,128,0.3)",
            "griddash": "dot",
            "gridwidth": 0.5
        },
        "subplots": {
            "horizontal_spacing": 0.05,
            "vertical_spacing": 0.065
        },
        "misc": {
            "height_scale_factor": 0.95,
            "width_scale_factor": 1.3,
            "scale": 2
        }
    }
}
