{
    "source": "../datasets/metaverse_transactions_dataset.csv",
    "date_column": "timestamp",
    "output": "metaverse_transactions_dataset",
    "filtration": {
        "polars": "pl.col('amount') > 200"
    },
    "transformation": {
        "target_column": {
            "sql": "(anomaly = 'high_risk')::int"
        },
        "amount_log": {
            "polars": "pl.col('amount').log()"
        }
    },
    "anomalies": {
        "multiplier": 1.5,
        "threshold": 3.0
    },
    "markdown": {
        "css_style": "../style.css",
        "float_precision": 4
    },
    "plotly": {
        "plot": {
            "mode": "lines+markers",
            "line": {
                "color": "dodgerblue",
                "dash": "dash",
                "width": 0.8
            },
            "marker": {
                "size": 6,
                "symbol": "circle",
                "color": "white",
                "line": {
                    "color": "dodgerblue",
                    "width": 0.5
                }
            }
        },
        "anomalies": {
            "criterion": "IQR",
            "style": {
                "type": "rect",
                "xref": "x",
                "yref": "y",
                "fillcolor": "grey",
                "opacity": 0.05,
                "line": {
                    "width": 1.0,
                    "dash": "dot",
                    "color": "black"
                }
            }
        },
        "layout": {
            "margin": { "l": 20, "r": 20, "t": 30, "b": 20 },
            "showlegend": false,
            "height": 384
        },
        "grid": {
            "automargin": true,
            "gridcolor": "rgba(128,128,128,0.3)",
            "griddash": "dot",
            "gridwidth": 0.5
        },
        "misc": {
            "height_scale_factor": 0.95,
            "width_scale_factor": 1.3,
            "scale": 2
        },
        "subplots": {
            "horizontal_spacing": 0.05,
            "vertical_spacing": 0.065
        }
    },
    "mapping": {
        "_uniq": "Number of unique values",
        "_null_ratio": "Ratio of null values",
        "_min": "Min",
        "_max": "Max",
        "_mean": "Mean",
        "_median": "Median",
        "_std": "Standard deviation"
    }
}
